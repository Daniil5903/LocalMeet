@model LocalMeet.ViewModels.AdminUsersViewModel

<h2>Управление пользователями</h2>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Email</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @(user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.UtcNow
                                    ? "Заблокирован"
                                    : "Активен")
            </td>
            <td>
                <a asp-action="LockUser"
                   asp-route-id="@user.Id"
                   class="btn btn-danger btn-sm">
                    Блокировать
                </a>

                    <a asp-action="UnlockUser"
                       asp-route-id="@user.Id"
                       class="btn btn-success btn-sm">
                        Разблокировать
                    </a>
                </td>
            </tr>
                }
    </tbody>
</table>

<nav>
    <ul class="pagination">

        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Users"
                   asp-route-page="@(Model.CurrentPage - 1)">
                    Назад
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Users"
                   asp-route-page="@i">
                    @i
                </a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Users"
                   asp-route-page="@(Model.CurrentPage + 1)">
                    Вперёд
                </a>
            </li>
        }

    </ul>
</nav>